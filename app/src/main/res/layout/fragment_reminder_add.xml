<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="提醒名称"
        android:maxLength="20"
        android:padding="12dp" />

    <TimePicker
        android:id="@+id/time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:timePickerMode="spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="重复"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/rg_repeat_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_radio_group"
        android:orientation="vertical"
        android:padding="8dp">

        <RadioButton
            android:id="@+id/rb_once"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="仅一次" />

        <RadioButton
            android:id="@+id/rb_daily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="每天" />

        <RadioButton
            android:id="@+id/rb_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="提醒方式"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/rg_notify_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_radio_group"
        android:orientation="vertical"
        android:padding="8dp">

        <RadioButton
            android:id="@+id/rb_ring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="响铃" />

        <RadioButton
            android:id="@+id/rb_vibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="振动" />

        <RadioButton
            android:id="@+id/rb_ring_vibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="响铃和振动" />
    </RadioGroup>

</LinearLayout> 